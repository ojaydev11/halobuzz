# HaloBuzz Northflank Environment Variables Template
# Copy this file to .env.northflank and fill in your actual values

# =============================================================================
# CORE APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=5010
HOST=0.0.0.0
API_VERSION=v1
CORS_ORIGIN=*

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/halobuzz?retryWrites=true&w=majority

# Redis Connection String
REDIS_URL=redis://username:password@redis-host:6379

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret Key (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# Admin Dashboard Secret
ADMIN_SECRET=your-admin-dashboard-secret-key

# AI Service Secret
AI_SERVICE_SECRET=your-ai-service-secret-key
AI_ENGINE_SECRET=your-ai-engine-secret-key

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Agora Video SDK
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERT=your-agora-app-certificate

# AWS S3 Storage
S3_BUCKET=your-s3-bucket-name
S3_REGION=us-east-1
S3_ACCESS_KEY=your-aws-access-key
S3_SECRET_KEY=your-aws-secret-key

# =============================================================================
# PAYMENT GATEWAYS
# =============================================================================
# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# eSewa (Nepal)
ESEWA_MERCHANT_ID=your-esewa-merchant-id
ESEWA_SECRET=your-esewa-secret

# Khalti (Nepal)
KHALTI_PUBLIC_KEY=your-khalti-public-key
KHALTI_SECRET_KEY=your-khalti-secret-key

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_ENVIRONMENT=sandbox

# =============================================================================
# AI SERVICES
# =============================================================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# AI Configuration
AI_MODEL_VERSION=gpt-4
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# AI Engine URL (internal service communication)
AI_ENGINE_URL=http://halo-ai-engine:5020

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================
# SendGrid Email
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Twilio SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI=true
ENABLE_PAYMENTS=true
ENABLE_NOTIFICATIONS=true
ENABLE_MODERATION=true
ENABLE_ANALYTICS=true

# =============================================================================
# ADMIN DASHBOARD CONFIGURATION
# =============================================================================
# Next.js Admin Dashboard
NEXT_PUBLIC_API_URL=https://your-backend-api-url.com
NEXT_PUBLIC_AI_URL=https://your-ai-engine-url.com

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# =============================================================================
# NORTHFLANK SPECIFIC
# =============================================================================
# Service URLs (will be set by Northflank)
BACKEND_URL=https://halo-api.your-project.northflank.app
AI_ENGINE_URL=https://halo-ai-engine.your-project.northflank.app
ADMIN_URL=https://halo-admin.your-project.northflank.app

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Override any development settings for production
NODE_ENV=production
LOG_LEVEL=warn
ENABLE_DEBUG=false
