{
  "cli": {
    "version": ">= 14.0.0",
    "appVersionSource": "remote",
    "requireCommit": true
  },
  "build": {
    "development": {
      "distribution": "internal",
      "developmentClient": true,
      "channel": "development",
      "ios": {
        "resourceClass": "default",
        "simulator": true,
        "image": "latest"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug",
        "image": "latest"
      },
      "env": {
        "EXPO_NO_TELEMETRY": "1",
        "NODE_ENV": "development",
        "EXPO_PUBLIC_API_BASE_URL": "http://localhost:5010"
      },
      "prebuildCommand": "npx expo prebuild --clean --platform all"
    },
    "preview": {
      "distribution": "internal",
      "channel": "preview",
      "ios": {
        "resourceClass": "medium",
        "buildConfiguration": "Release",
        "image": "latest",
        "bundler": "metro"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "image": "latest"
      },
      "env": {
        "EXPO_NO_TELEMETRY": "1",
        "EXPO_PUBLIC_API_BASE_URL": "https://halo-api-production.up.railway.app",
        "NODE_ENV": "production"
      },
      "prebuildCommand": "npx expo prebuild --clean --platform all"
    },
    "production": {
      "channel": "production",
      "ios": {
        "resourceClass": "medium",
        "buildConfiguration": "Release",
        "autoIncrement": "buildNumber",
        "image": "latest",
        "bundler": "metro",
        "simulator": false,
        "enterpriseProvisioning": "universal"
      },
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:bundleRelease",
        "autoIncrement": "versionCode",
        "image": "latest"
      },
      "env": {
        "EXPO_NO_TELEMETRY": "1",
        "EXPO_PUBLIC_API_BASE_URL": "https://api.halobuzz.com",
        "NODE_ENV": "production"
      },
      "prebuildCommand": "npx expo prebuild --clean --platform all"
    },
    "production-ios": {
      "extends": "production",
      "ios": {
        "resourceClass": "large",
        "buildConfiguration": "Release",
        "autoIncrement": "buildNumber",
        "image": "latest",
        "bundler": "metro"
      }
    },
    "production-android": {
      "extends": "production",
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:bundleRelease",
        "autoIncrement": "versionCode",
        "image": "latest"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "your-apple-id@example.com",
        "ascAppId": "your-app-store-connect-app-id",
        "appleTeamId": "your-apple-team-id"
      },
      "android": {
        "serviceAccountKeyPath": "./google-play-service-account.json",
        "track": "internal",
        "releaseStatus": "draft"
      }
    }
  }
}