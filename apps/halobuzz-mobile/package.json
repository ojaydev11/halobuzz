{
  "name": "halobuzz-mobile",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "build:ios": "eas build -p ios --profile preview",
    "build:ios:dev": "eas build -p ios --profile development",
    "build:android": "eas build -p android --profile preview",
    "build:android:dev": "eas build -p android --profile development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "analyze:bundle": "node scripts/bundle-analyzer.js",
    "perf:baseline": "npm run analyze:bundle && npm run test -- --testPathPattern=performance",
    "perf:compare": "npm run analyze:bundle",
    "perf:budgets": "node scripts/check-budgets.js",
    "test:performance": "jest --testPathPattern=performance --runInBand",
    "test:memory": "jest --testPathPattern=memory --runInBand",
    "test:startup": "jest --testPathPattern=startup --runInBand",
    "optimize:bundle": "node scripts/bundle-optimizer.js",
    "postinstall": "npm run optimize:bundle"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.2",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@shopify/flash-list": "2.0.2",
    "axios": "^1.6.2",
    "crypto-js": "^4.2.0",
    "expo": "54.0.12",
    "expo-audio": "~1.0.13",
    "expo-camera": "~17.0.8",
    "expo-constants": "~18.0.9",
    "expo-device": "~8.0.9",
    "expo-font": "~14.0.8",
    "expo-linear-gradient": "~15.0.7",
    "expo-linking": "~8.0.8",
    "expo-notifications": "~0.32.12",
