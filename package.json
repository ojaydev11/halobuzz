{
  "name": "halobuzz",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "eslint": "^9.12.0",
    "prettier": "^3.3.3",
    "turbo": "^1.13.3",
    "typescript": "^5.6.2"
  }
}
{
  "name": "halobuzz",
  "version": "0.1.0",
  "description": "Nepali-first live streaming and short-video platform",
  "private": true,
  "scripts": {
    "build": "cd backend && npm run build",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "typecheck": "tsc -b backend ai-engine",
    "test": "cd backend && npm run test && cd ../ai-engine && npm run test",
    "test:security": "powershell -ExecutionPolicy Bypass -File scripts/test-security.ps1",
    "test:security:quick": "powershell -ExecutionPolicy Bypass -File scripts/test-security.ps1 -Quick",
    "test:security:lint": "powershell -ExecutionPolicy Bypass -File scripts/test-security.ps1 -LintOnly",
    "dev:backend": "cd backend && npm run dev",
    "dev:ai": "cd ai-engine && npm run dev",
    "dev:mobile": "cd apps/halobuzz-mobile && npx expo start",
    "mobile:dev": "cd apps/halobuzz-mobile && npx expo start",
    "mobile:build:ios": "cd apps/halobuzz-mobile && npx eas build -p ios --profile preview",
    "mobile:build:ios:dev": "cd apps/halobuzz-mobile && npx eas build -p ios --profile development",
    "seed": "cd backend && npm run seed",
    "smoke": "bash scripts/smoke.sh || powershell -File scripts/smoke.ps1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=20 <21",
    "packageManager": "pnpm@9.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/halobuzz/halobuzz-platform.git"
  },
  "keywords": [
    "live-streaming",
    "short-video",
    "nepal",
    "react-native",
    "nodejs",
    "ai",
    "monetization"
  ],
  "author": "HaloBuzz Team",
  "license": "UNLICENSED"
}
