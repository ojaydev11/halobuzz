# Server Configuration
NODE_ENV=development
PORT=5010
API_VERSION=v1
TZ=Australia/Sydney

# Database
MONGODB_URI=mongodb://localhost:27017/halobuzz
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/halobuzz

# JWT Configuration
JWT_SECRET=generate-strong-secret-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=generate-strong-refresh-secret
JWT_REFRESH_EXPIRES_IN=30d

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=halobuzz-media
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain

# Agora Configuration
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-app-certificate
AGORA_PRIMARY_KEY=your-agora-primary-key

# Payment Gateways
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
ESEWA_MERCHANT_ID=your-esewa-merchant-id
ESEWA_SECRET_KEY=your-esewa-secret-key
KHALTI_SECRET_KEY=your-khalti-secret-key

# AI Services
AI_ENGINE_URL=http://localhost:5020
AI_ENGINE_SECRET=generate-strong-ai-secret
OPENAI_API_KEY=your-openai-api-key
TENSORFLOW_MODEL_PATH=./models/nsfw-detection

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@halobuzz.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Firebase Configuration
FIREBASE_PROJECT_ID=halobuzz-app
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Coin System
COIN_EXCHANGE_RATE=50
CURRENCY_DEFAULT=NPR

# OG Levels Configuration
OG1_PRICE=5000
OG2_PRICE=7000
OG3_PRICE=9000
OG4_PRICE=15000
OG5_PRICE=45000

# Halo Throne Configuration
HALO_THRONE_PRICE=15000
HALO_THRONE_DURATION_DAYS=25

# App Configuration
APP_BASE_URL=http://localhost:3000

# File Upload Limits
MAX_FILE_SIZE=100MB
ALLOWED_VIDEO_FORMATS=mp4,mov,avi
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Admin Configuration
ADMIN_EMAILS=admin@halobuzz.com