# Server Configuration
NODE_ENV=development
PORT=4000
HOST=0.0.0.0
API_URL=http://localhost:4000
WEBSITE_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/halobuzz
MONGODB_MAX_POOL_SIZE=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_REFRESH_SECRET=your_refresh_secret_here_min_32_chars

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Agora Configuration
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate

# eSewa Configuration (Nepal)
ESEWA_MERCHANT_CODE=HALOBUZZ
ESEWA_SECRET=your_esewa_secret
ESEWA_API_URL=https://uat.esewa.com.np/epay/main
ESEWA_VERIFY_URL=https://uat.esewa.com.np/epay/transrec

# Khalti Configuration (Nepal)
KHALTI_PUBLIC_KEY=test_public_key_
KHALTI_SECRET_KEY=test_secret_key_
KHALTI_API_URL=https://a.khalti.com/api/v2

# Stripe Configuration (Global)
STRIPE_PUBLIC_KEY=pk_test_
STRIPE_SECRET_KEY=sk_test_
STRIPE_WEBHOOK_SECRET=whsec_

# AI Moderation
AI_MODERATION=true
AI_NSFW_BLOCK_THRESHOLD=0.7
AI_NSFW_FLAG_THRESHOLD=0.5
AI_AGE_THRESHOLD=18
AI_ADMIN_OVERRIDE=true

# AWS/Storage
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=halobuzz-media
CDN_URL=https://cdn.halobuzz.com

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@halobuzz.com
SMTP_PASS=your_email_password
EMAIL_FROM=HaloBuzz <noreply@halobuzz.com>

# SMS Service
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=AC
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=+1234567890

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=halobuzz
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@halobuzz.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_URL=http://localhost:3000
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
FEATURE_AI_MODERATION=true
FEATURE_GIFTING=true
FEATURE_REELS=true
FEATURE_OG_MEMBERSHIP=true
FEATURE_MESSAGING=true
FEATURE_GAMES=false
FEATURE_LINKCAST=false

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_32_char_encryption_key_here

# Admin
ADMIN_EMAIL=admin@halobuzz.com
ADMIN_PASSWORD=change_this_password

# Development/Testing
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=false
TEST_MODE=false
DEBUG=false