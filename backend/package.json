    "aws-sdk": "^2.1490.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-list-endpoints": "^7.1.1",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "face-api.js": "^0.22.2",
    "file-type": "^18.7.0",
    "firebase-admin": "^12.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.1",
    "nsfwjs": "^2.4.2",
    "prom-client": "^15.1.0",
    "rate-limit-redis": "^4.1.0",
    "sharp": "^0.33.1",
    "moment": "^2.29.4",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "openai": "^4.20.1",
    "paypal-rest-sdk": "^1.8.1",
    "qrcode": "^1.5.3",
    "redis": "^4.6.11",
    "sharp": "^0.33.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "speakeasy": "^2.0.0",
    "stripe": "^14.7.0",
    "twilio": "^4.19.0",
