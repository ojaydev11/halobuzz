# HaloBuzz Admin Dashboard v0.1.0 - Production Environment Configuration
# Copy this file to admin/.env.local and fill in your actual values

#=============================================================================
# CORE APPLICATION CONFIGURATION
#=============================================================================

NODE_ENV=production
NEXT_PUBLIC_APP_NAME=HaloBuzz Admin
NEXT_PUBLIC_VERSION=0.1.0

#=============================================================================
# API CONFIGURATION
#=============================================================================

# Backend API URL
NEXT_PUBLIC_API_BASE=https://halobuzz-backend.railway.app

#=============================================================================
# AUTHENTICATION & SECURITY
#=============================================================================

# NextAuth Configuration
NEXTAUTH_URL=https://admin.halobuzz.com
NEXTAUTH_SECRET=your-nextauth-secret-minimum-32-characters-long

# Admin JWT Secret (MUST match backend)
ADMIN_JWT_SECRET=your-super-secure-admin-jwt-secret-minimum-32-characters-long

# 2FA Configuration
ADMIN_TOTP_REQUIRED=true
NEXT_PUBLIC_ENABLE_2FA=true

#=============================================================================
# FEATURE FLAGS
#=============================================================================

NEXT_PUBLIC_ENABLE_AUDIT_LOGS=true
NEXT_PUBLIC_ENABLE_REAL_TIME=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

#=============================================================================
# MONITORING & ANALYTICS
#=============================================================================

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS=true

# External Monitoring
SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn
