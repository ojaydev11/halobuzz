# HaloBuzz Admin Dashboard Production Environment Variables
# Copy this file to .env and fill in your actual values

# API Configuration
NEXT_PUBLIC_API_BASE=https://<backend>.railway.app

# Admin Security
ADMIN_JWT_SECRET=<same-jwt-secret-as-backend>
ADMIN_TOTP_REQUIRED=true

# Analytics (Optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=<your-analytics-id>

# Feature Flags
NEXT_PUBLIC_GAMES_ENABLED=true
NEXT_PUBLIC_MODERATION_ENABLED=true
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# UI Configuration
NEXT_PUBLIC_APP_NAME=HaloBuzz Admin
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_SUPPORT_EMAIL=support@halobuzz.com